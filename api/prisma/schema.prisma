datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

model User {
  id        String  @id @default(cuid())
  role      Role    @default(USER)
  username  String  @unique
  hash      String
  firstName String?
  lastName  String?
  email     String?
  polls     Poll[]
}

model Poll {
  id              String     @id @default(cuid())
  private         Boolean    @default(false)
  title           String
  description     String?
  created         DateTime
  expires         DateTime
  multipleAnswers Boolean    @default(false)
  items           PollItem[]
  user            User       @relation(fields: [userId], references: [id])
  userId          String
}

model PollItem {
  id          String  @id @default(cuid())
  description String?
  votes       Int     @default(0)
  poll        Poll    @relation(fields: [pollId], references: [id])
  pollId      String
}

enum Role {
  USER
  ADMIN
}
